@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@{
  Layout = "_Layout";
}

<h1>Stylists</h1>

@if(Model.Count == 0)
{
  <p>No stylists have been added.</p>
}

@foreach(Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</p>
}

<p>@Html.ActionLink("Add New Stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>