@model HairSalon.Models.Stylist

@{
  Layout = "_Layout";
}

<h4>Delete Stylist</h4>
<h3>Are you sure you want to remove @Html.DisplayFor(model => model.Name)?</h3>
<br>

<div class="flex">
  @using (Html.BeginForm())
  {
      <input type="submit" value="Delete"/>
  }
  <button>@Html.ActionLink("Back", "Details", new { id = Model.StylistId })</button>
</div>