@model HairSalon.Models.Stylist

@{
  Layout = "_Layout";
}

<h2>Edit Stylist</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <br>
  <div class="flex">
    <input type="submit" value="Save"/>
    <button>@Html.ActionLink("Back", "Details", new { id = Model.StylistId })</button>
  </div>
}