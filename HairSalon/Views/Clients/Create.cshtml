@model HairSalon.Models.Client

@{
  Layout = "_Layout";
}

<h4>Add a new Client</h4>
@using (Html.BeginForm())
{
  @* @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId") *@
  @Html.HiddenFor(model => model.StylistId)
  <p>Stylist: @Html.DisplayFor(model => model.Name)</p>
  <br>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.RegularClient, "Regular Client?")
  @Html.CheckBoxFor(model => model.RegularClient)
  <br>
  @Html.LabelFor(model => model.Usual, "Usual Service")
  @Html.TextBoxFor(model => model.Usual)
  <br>
  <input type="submit" value="Add Client"/>
}
  
